<%- include('../partials/head') %>
<head>
  <title>Reset Password</title>
</head>
<body class="gradient-background">
  <!-- Match body class for background styling -->
  <div class="login-container">
    <!-- Use the same container class for alignment -->
    <h5 style="display: inline-flex; align-items: center; margin: 0">
      <img
        src="/img/EEELogo.png"
        alt="EEETrading Logo"
        height="60"
        style="padding: 1px; margin-right: 10px" />
      EEETrading LLC
    </h5>

    <h1>Request Password Reset</h1>

    <form
      action="/auth/request-password-reset"
      method="POST">
      <div class="form-group">
        <label for="email">Email Address</label>
        <input
          type="email"
          id="email"
          name="email"
          class="form-control"
          placeholder="Enter your email"
          required />
      </div>

      <button
        type="submit"
        class="btn btn-primary btn-flat m-b-30 m-t-30">
        Send Reset Link
      </button>

      <% if (message) { %>
      <div
        id="alert"
        class="alert alert-info alert-dismissible fade show"
        role="alert">
        <%= message %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"></button>
      </div>
      <% } %>
    </form>
  </div>

  <script>
    const alertElement = document.getElementById("alert");
    if (alertElement) {
      setTimeout(() => {
        alertElement.style.display = "none";
      }, 3000);
    }
  </script>
</body>
